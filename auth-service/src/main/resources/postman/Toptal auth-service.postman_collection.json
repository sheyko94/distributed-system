{
	"info": {
		"_postman_id": "a0d10d14-f419-4fe1-a718-533ce232c307",
		"name": "Toptal auth-service",
		"description": "> Make sure ADMIN role already exists in the database before running this collection\n> Make sure the user doing sign up does not already exist",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "sign-up",
			"item": [
				{
					"name": "Sign Up",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.environment.set(\"id\", pm.response.json().id);",
									"pm.environment.set(\"username\", pm.response.json().username);",
									"",
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});"
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"username\": \"ivangonzalezcabral@toptal.com\",\n    \"password\": \"test123\",\n    \"passwordVerification\": \"test123\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{auth_service_host}}/v1/sign-up",
							"host": [
								"{{auth_service_host}}"
							],
							"path": [
								"v1",
								"sign-up"
							]
						}
					},
					"response": []
				},
				{
					"name": "Log In",
					"event": [
						{
							"listen": "test",
							"script": {
								"exec": [
									"pm.environment.set(\"access_token\", pm.response.json().access_token);",
									"pm.environment.set(\"refresh_token\", pm.response.json().refresh_token);",
									"",
									"pm.test(\"Status code is 200\", function () {",
									"    pm.response.to.have.status(200);",
									"});",
									""
								],
								"type": "text/javascript"
							}
						}
					],
					"request": {
						"auth": {
							"type": "noauth"
						},
						"method": "POST",
						"header": [],
						"body": {
							"mode": "urlencoded",
							"urlencoded": [
								{
									"key": "grant_type",
									"value": "password",
									"type": "text"
								},
								{
									"key": "password",
									"value": "test123",
									"type": "text"
								},
								{
									"key": "username",
									"value": "{{username}}",
									"type": "text"
								},
								{
									"key": "client_id",
									"value": "toptal-client-id",
									"type": "text"
								},
								{
									"key": "client_secret",
									"value": "toptal-client-secret",
									"type": "text"
								}
							]
						},
						"url": {
							"raw": "{{auth_service_host}}/oauth/token",
							"host": [
								"{{auth_service_host}}"
							],
							"path": [
								"oauth",
								"token"
							]
						}
					},
					"response": []
				}
			]
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{access_token}}",
				"type": "string"
			}
		]
	},
	"event": [
		{
			"listen": "prerequest",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		},
		{
			"listen": "test",
			"script": {
				"type": "text/javascript",
				"exec": [
					""
				]
			}
		}
	]
}